<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="TruckSelection" title="{i18n>TruckSelectionTitle}" contentWidth="500px">
        <content>
            <List id="TruckList" mode='MultiSelect' headerText="{i18n>TruckListTitle}">
                <StandardListItem id="Truck1" title="Truck 1" info="HH-BT-01" icon="/Trucks/Mischer1.jpg"/>
                <StandardListItem id="Truck2" title="Truck 2" info="HH-BT-02" icon="/Trucks/Mischer2.jpg"/>
                <StandardListItem id="Truck3" title="Truck 3" info="HH-BT-03" icon="/Trucks/Mischer3.jpg"/>
                <StandardListItem id="Truck4" title="Truck 4" info="HH-BT-04" icon="/Trucks/Mischer4.jpg"/>
            </List>
        </content>
        <beginButton>
            <Button id="beginButton" text="{i18n>TruckSelectionBeginButton}" press=".onConfirmPress" type="Emphasized" />
        </beginButton>
        <endButton>
            <Button id="endButton" text="{i18n>TruckSelectionEndButton}" press=".onCloseDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
